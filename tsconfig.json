{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es6", "dom"],
      "types": ["chalk"],
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": false,
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "noUnusedLocals": true,
      "suppressImplicitAnyIndexErrors": true,
      "outDir": "lib"
    }
}
